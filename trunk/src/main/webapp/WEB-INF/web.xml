<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
	  PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	  "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<display-name>Vendor Survey</display-name>
	
	<!-- Contexts - These are used to initialize the spring context -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:bugeater-context.xml
		</param-value>
	</context-param>

	<!--
	  This setting allows you to configure whether the app is being deployed
	  in production or development.  Production turns off some some things that
	  are useful for debugging, but not for production.
      When deploying for production, comment this parameter out.
      
      use Application#getConfigurationType() instead
	<context-param>
		<param-name>configuration</param-name>
		<param-value>development</param-value>
	</context-param>
    -->
	
	<!-- Filters -->
	<filter>
		<filter-name>openSessionInViewFilter</filter-name>
		<filter-class>
			org.springframework.orm.hibernate3.support.OpenSessionInViewFilter
		</filter-class>
	</filter>
	
    <filter>
        <filter-name>BugeaterApplication</filter-name>
        <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
        <init-param>
            <param-name>applicationClassName</param-name>
            <param-value>bugeater.web.BugeaterApplication</param-value>
        </init-param>
    </filter>

	<!-- Filter Mappings -->
	<filter-mapping>
		<filter-name>openSessionInViewFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>BugeaterApplication</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- Listeners -->
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	
	<resource-ref>
        <description>DataSource Reference</description>
        <res-ref-name>jdbc/bugeater</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
    <login-config>
        <realm-name>SIMIS Realm</realm-name>
    </login-config>
</web-app>
